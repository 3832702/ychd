.s-hot {
  width: 100%;
  background:#fff;
  border-top:1px solid #e1e1e1;
  border-bottom:1px solid #e1e1e1;
  padding-bottom:10rpx;
  margin-bottom:20rpx;
}

.s-hot-head {
  width: 100%;
  height: 70rpx;
  display:flex;
  align-items:center;
  box-sizing:border-box;
  padding:0 25rpx;
  font-size:30rpx;
  color:#989898;
  margin-bottom:10rpx;
}

.s-hot-head:before {
  content: " ";
  width: 30rpx;
  height: 30rpx;
  margin-right:12rpx;
  background:url("data:image/png;base64,") no-repeat;
  background-size:cover;
}

.s-hot-list {
  width: 100%;
  box-sizing:border-box;
  padding:0 56rpx;
  display:flex;
  flex-wrap:wrap;
}

.s-hot-item {
  height: 50rpx;
  box-sizing:border-box;
  border:1px solid #a9a9a9;
  border-radius:25rpx;
  font-size: 26rpx;
  color:#a9a9a9;
  padding:0 18rpx;
  display:flex;
  align-items:center;
  margin: 0 10rpx 20rpx;
}