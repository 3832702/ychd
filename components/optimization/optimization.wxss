
.s-optimization {
  width: 100%;
  background:#fff;
  margin-bottom:10rpx;
}

.s-optimization-head {
  width: 100%;
  height:78rpx;
  line-height:78rpx;
  display:flex;
  align-content:center;
  justify-content:space-between;
  font-size:30rpx;
  box-sizing:border-box;
  padding:0 30rpx;
  margin-bottom:15rpx;
}

.s-optimization-head-title {
  font-weight:bold;
}

.s-optimization-head-more {
  display:flex;
  align-items:center;
  font-size:24rpx;
}

.s-optimization-head-more:after {
  content:" ";
  width: 10rpx;
  height:10rpx;
  border:1px solid transparent;
  border-top-color:#000;
  border-left-color:#000;
  transform:rotate(135deg);
  margin-left:10rpx;
}

.s-optimization-swiper {
  width: 100%;
  height: 300rpx;
  box-sizing:border-box;
  padding:0 30rpx;
}

.s-optimization-item {
  display:flex;
  flex-direction:column;
  align-items:center;
}

.s-optimization-img {
  width: 180rpx;
  height:180rpx;
  border-radius:5px;
  background:#f2f2f2;
  margin-bottom:10rpx;
}

.s-optimization-title {
  width: 100%;
  height:44rpx;
  line-height:44rpx;
  text-align:center;
  color:#4c4c4c;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}