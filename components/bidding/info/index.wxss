.s-info {
  width: 100%;
  padding-top:36rpx;
  background:#fff;
}

.s-info-head {
  width: 100%;
  height: 48rpx;
  box-sizing:border-box;
  padding:0 30rpx;
  font-size:34rpx;
  font-weight:600;
}

.s-info-list {
  width: 100%;
  height: 100rpx;
  box-sizing:border-box;
  padding:0 30rpx;
  display:flex;
  align-items:center;
  justify-content:space-between;
}

.s-info-item {
  width: 218rpx;
  height: 66rpx;
  box-sizing:border-box;
  border:1px solid #999999;
  border-radius:6rpx;
  font-size:26rpx;
  display:flex;
  align-items:center;
  justify-content:center;
  padding: 0 35rpx;
  position:relative;
}

.s-info-picker {
  width: 180rpx;
  height: 100%;
  line-height: 66rpx;
  text-align:center;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.s-info-item:after {
  content: " ";
  width: 0;
  height:0;
  border:8rpx solid transparent;
  border-top-color:#cbcbcb;
  border-left-color:#cbcbcb;
  transform:rotate(135deg);
  position:absolute;
  top:24rpx;
  right:16rpx;
}


.s-info-wrap {
  width: 690rpx;
  margin:0 auto;
  min-height: 230rpx;
}

.s-info-img {
  width: 100%;
  height: 230rpx;
}

.s-info-title {
  width: 100%;
  height: 109rpx;
  box-sizing:border-box;
  padding:0 30rpx;
  font-size: 32rpx;
  font-weight:400;
  line-height: 107rpx;
  color:#000000;
  border-bottom:1px solid #f2f2f2;
}