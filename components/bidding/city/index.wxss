.s-city {
  width: 100%;
  height: 100%;
  background:rgba(0,0,0,.1);
  position:fixed;
  left:0;
  top:0;
}

.s-city-input {
  width: 540rpx;
  height: 256rpx;
  background:#fff;
  position:absolute;
  left:50%;
  top:50%;
  transform:translate(-50%, -50%);
  border-radius:10px;
  font-size:28rpx;
  color:#060606;
}

.s-city-prompt {
  width: 100%;
  height: 168rpx;
  box-sizing:border-box;
  padding:36rpx 0;
  border-bottom:1px solid #d8d7d5;
}

.s-city-prompt-t {
  width: 460rpx;
  height: 46rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  display:flex;
  align-items:center;
  justify-content:center;
}

.s-city-prompt-t text {
  width: 24rpx;
  height: 26rpx;
  background:url('data:image/png;base64,');
  background-size:cover;
  margin:0 5rpx 0 10rpx;
}

.s-city-prompt-b {
  width: 460rpx;
  height: 46rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  line-height: 46rpx;
  text-align:center;
}

.s-city-btn {
  width: 100%;
  height: 88rpx;
  display:flex;
}

.s-city-btn text {
  width: 50%;
  height: 100%;
  text-align:center;
  justify-content:center;
  line-height: 88rpx;
  color:#42b1ff;
}

.s-city-btn text:first-child {
  border-right:1px solid #d8d7d5;
}