page {
  background:#f5f5f5;
}

.s-record {
  width: 100%;
}

.s-record-list {
  width: 100%;
  overflow:hidden;
  background:#fff;
  margin-bottom:20rpx;
}

.s-record-item {
  width: 720rpx;
  height: 180rpx;
  display:flex;
  align-items:center;
  font-size: 26rpx;
  flex-wrap:wrap;
  margin-left:30rpx;
  border-bottom:1px solid #f6f6f6;
  justify-content:space-between;
}

.s-record-img {
  width: 132rpx;
  height: 90rpx;
  background:red;
}

.s-record-info {
  width: 554rpx;
  height: 100%;
  box-sizing:border-box;
  padding:25rpx 0;
}

.s-record-name {
  width: 100%;
  height: 45rpx;
  line-height: 45rpx;
  font-size:30rpx;
  font-weight:600;
}

.s-record-type {
  width: 100%;
  height: 45rpx;
  line-height: 45rpx;
  font-size: 26rpx;
  color:#979797;
}

.s-record-time {
  width: 100%;
  height: 45rpx;
  line-height: 45rpx;
  font-size: 26rpx;
  color:#979797;
}

.s-record-status {
  width: 100%;
  height: 60rpx;
  line-height:60rpx;
}

.s-record-more {
  width: 100%;
  height: 90rpx;
  background:#fff;
  display:flex;
  box-sizing:border-box;
  padding:0 30rpx;
  align-items:center;
  font-size: 26rpx;
  justify-content:space-between;
}

.s-record-more-price {
  color:#979797;
}

.s-record-more-status {
  color:#979797;
  display:flex;
  align-items:center;
}

.s-record-more-submit {
  min-width: 120rpx;
  height: 60rpx;
  padding: 0 10rpx;
  background:red;
  color:#fff;
  display:flex;
  align-items:center;
  justify-content:center;
  border-radius:5rpx;
  margin-left:10rpx;
}