page {
  background:#f2f2f2;
}

.s-head {
  width: 100%;
  position:relative;
  background:#fff;
  padding-bottom:20rpx;
}

.s-banner {
  width: 100%;
  height: 600rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.s-avatar {
  width: 150rpx;
  height: 150rpx;
  background:#f4f0ef;
  border-radius:50%;
  position:absolute;
  left:28rpx;
  bottom:0;
  top:534rpx;
  display:flex;
  align-items:center;
  justify-content:center;
  z-index:2;
}

.s-name {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  box-sizing:border-box;
  padding-left: 206rpx;
  background:rgba(0,0,0,.3);
  font-size: 32rpx;
  color:#fff;
  position:absolute;
  left:0;
  font-weight:bold;
  top:518rpx;
  z-index:1;
}

.s-avatar image {
  width: 140rpx;
  height: 140rpx;
  border-radius:50%;
}

.s-desc {
  width: 100%;
  height: 100rpx;
  background:#fff;
  box-sizing:border-box;
  padding: 20rpx 20rpx 0 206rpx;
  line-height: 40rpx;
  font-size: 26rpx;
  color:#999999;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}